<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="Testing!!!"
        android:textSize="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <GridLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:columnCount="2"
    app:layout_constraintTop_toBottomOf="@+id/Title"
    >
        <TextView
        android:id ="@+id/GpsEnableLabel"
        android:layout_gravity="right"
        android:textSize="25dp"
        android:text ="GPS ENABLE "
        />
        <TextView
            android:id ="@+id/GpsEnable"
            android:textSize="25dp"
            android:text =":"
        />
        <TextView
            android:id ="@+id/GetSpeedLabel"
            android:layout_gravity="right"
            android:textSize="25dp"
            android:text ="얻은 속도 "
            />
        <TextView
            android:id ="@+id/GetSpeed"
            android:textSize="25dp"
            android:text =":"
            />
        <TextView
            android:id ="@+id/CalSpeedLabel"
            android:layout_gravity="right"
            android:textSize="25dp"
            android:text ="계산 한 속도 "
            />
        <TextView
            android:id ="@+id/CalSpeed"
            android:textSize="25dp"
            android:text =":"
            />
        <TextView
            android:id ="@+id/TimeLabel"
            android:layout_gravity="right"
            android:textSize="25dp"
            android:text ="시간 "
            />
        <TextView
            android:id ="@+id/Time"
            android:textSize="25dp"
            android:text =":"
            />
        <TextView
            android:id ="@+id/LastTimeLabel"
            android:layout_gravity="right"
            android:textSize="25dp"
            android:text ="마지막 시간 "
            />
        <TextView
            android:id ="@+id/LastTime"
            android:textSize="25dp"
            android:text =":"
            />
        <TextView
            android:id ="@+id/TimeDifLabel"
            android:layout_gravity="right"
            android:textSize="25dp"
            android:text ="시간 간격 "
            />
        <TextView
            android:id ="@+id/TimeDif"
            android:textSize="25dp"
            android:text =":"
            />
        <TextView
            android:id ="@+id/DistDifLabel"
            android:layout_gravity="right"
            android:textSize="25dp"
            android:text =" 거리 간격 "
            />
        <TextView
            android:id ="@+id/DistDif"
            android:textSize="25dp"
            android:text =":"
            />


</GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>